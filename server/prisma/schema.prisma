// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         BigInt       @id @default(autoincrement())
  uid        String       @unique
  password   String
  tokens     Json
  created_at DateTime     @default(now())
  Department Department[]
  Employee   Employee[]

  @@index([id], type: Hash)
  @@index([uid], type: Hash)
  @@index([tokens], type: Hash)
}

model Department {
  id          BigInt     @id @default(autoincrement())
  name        String     @unique
  manager     User       @relation(fields: [managerId], references: [id])
  managerId   BigInt
  description String
  createdAt   DateTime   @default(now())
  Employee    Employee[]

  @@index([id], type: Hash)
  @@index([managerId], type: Hash)
}

model Position {
  id       BigInt     @id @default(autoincrement())
  name     String     @unique
  Employee Employee[]

  @@index([id, name])
}

model Employee {
  id           BigInt     @id @default(autoincrement())
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       BigInt     @unique
  name         String
  surname      String
  positionId   BigInt
  position     Position   @relation(fields: [positionId], references: [id])
  staffMember  Boolean    @default(true)
  department   Department @relation(fields: [departmentId], references: [id], onUpdate: Cascade, onDelete: Restrict)
  departmentId BigInt

  @@index([id], type: Hash)
  @@index([userId], type: Hash)
  @@index([name, surname])
  @@index([departmentId])
}
